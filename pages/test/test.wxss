.container{
  padding-top: 200rpx;
  background: #ccc;
}
.bottom{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background: burlywood;
  display: flex;
}
.cart{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  background: fuchsia;
}
.add-cart{
  width: 200rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-left: 40rpx;
  background: rgb(0, 255, 76);
}
 
.click{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #eee;
}
 
.item{
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #ccc;
}
 
.point{
  float: right;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  background: rgb(231, 146, 146);
}
 
.good_box{
  width: 60rpx;
  height: 60rpx;
  background: red;
  border-radius: 60rpx;
  position: absolute;
}
